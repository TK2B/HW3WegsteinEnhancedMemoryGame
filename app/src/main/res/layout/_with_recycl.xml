<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout2WholeDisplay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_my"
    tools:context=".Game_Activity">


    <TextView
        android:id="@+id/txt_name"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:background="@color/cardview_shadow_end_color"
        android:foregroundGravity="fill_horizontal"
        android:gravity="center"
        android:text="Messeage "
        android:textColor="@color/primaryDarkColor"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="146dp" />

    <TextView
        android:id="@+id/txt_timer"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/primaryTextColor"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_name"
        tools:layout_editor_absoluteX="82dp" />

    <TextView
        android:id="@+id/ScoreView"
        android:layout_width="411dp"
        android:layout_height="63dp"
        android:background="@color/primaryDarkColor"
        android:gravity="center"
        android:text="Score"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintBottom_toTopOf="@+id/txt_timer"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/stop_button"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:onClick="endbutton"
        android:text="End Game"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="683dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_gameActive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="clip_horizontal|center|fill_vertical|center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/stop_button"
        app:layout_constraintTop_toBottomOf="@+id/txt_name"
        tools:layout_editor_absoluteX="186dp"
        tools:listitem="@layout/activity_item_for_recyc" />


</androidx.constraintlayout.widget.ConstraintLayout>